<h1>看板</h1>

<div id="board">
  <Board></Board>
</div>

<%= link_to "新增看板", new_board_path %>

<ul>
  <% @boards.each do |board| %>
    <li>
      <%= link_to board.title, board_path(board) %>
      <%= link_to "編輯", edit_board_path(board) %>
      <%= link_to "刪除", board_path(board), method: 'delete',
                          data: { confirm: '確認刪除?' } %>
    </li>
  <% end %>
</ul>